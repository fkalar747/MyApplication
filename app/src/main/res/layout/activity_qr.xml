<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/rel_dwm">


    <TextView
        android:id = "@+id/cameraResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom ="15dp"
        android:text="hello QR"/>

    <SurfaceView
        android:id = "@+id/cameraPreview"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/cameraResult"
        android:layout_above="@+id/qrmenu"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:id="@+id/qrmenu"
        android:background="@color/coral">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출근"
            android:id="@+id/qr_button1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="퇴근"
            android:id="@+id/qr_button2" />

    </LinearLayout>

</RelativeLayout>